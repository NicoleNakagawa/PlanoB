<script>
  function toggleMenu() {
    document.getElementById("menu").classList.toggle("open");
  }

  function abrirVideo() {
    // Redireciona para a página do vídeo
    window.location.href = 'assistir';
  }

  function abrirDia(dia) {
    // Verifica se não é dia passado ou futuro
    const elemento = event.target;
    if (!elemento.classList.contains('passado') && !elemento.classList.contains('futuro')) {
      // Redireciona para a página do dia específico
      window.location.href = `/treino-dia-${dia}`;
    }
  }
</script>

