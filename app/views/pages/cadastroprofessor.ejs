<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cadastro Professor PlanoB</title>
    <link rel="stylesheet" href="\css\cadlog\cad_professor.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
</head>

<body>
  <main class="container">
    <a href="javascript:window.history.back()" class="voltar"><i class="fas fa-arrow-left"></i></a>
    
    <!-- Lado esquerdo -->
    <section class="caixa-esquerda">
        <form action="/cadastroprofessor" method="POST" id="cadastroForm" role="form" aria-label="Formulário de Cadastro do Professor">
            <fieldset class="input-group">
                <h2>CADASTRO</h2>
                <section>
                    <label for="email">Email:</label>
                    <input 
                        type="email" 
                        id="email" 
                        name="email" 
                        aria-describedby="email-error" 
                        placeholder="email@email.com" 
                        required
                    >
                    <span class="error-message" id="email-error" role="alert" aria-live="polite"></span>
                </section>
            </fieldset>
            <fieldset class="form-group">
                <section class="input-goup">
                    <label for="senha">Senha:</label> 
                    <input type="password" id="senha" name="password" aria-describedby="senha-error" required>
                    <button type="button" id="toggleSenha" class="toggle-senha" tabindex="-1">
    
                    </button>
                    <span class="error-message" id="senha-error" role="alert" aria-live="polite"></span>
                    <h6 id="senha-requisitos"></h6>
                    <br>
                </section>
                <section class="input-goup">
                    <label for="conf_senha">Confirmar senha:</label> 
                    <input type="password" id="conf_senha" name="confirmPassword" aria-describedby="conf_senha-error" required>
                    <button type="button" id="toggle-conf-senha" class="toggle-senha" tabindex="-1">

                    </button>
                    <span class="error-message" id="conf_senha-error" role="alert" aria-live="polite"></span>
                </section>
                <section class="input-goup">
                    <label for="cref">CREF:</label> 
                    <input 
                        type="text" 
                        id="cref" 
                        name="cref" 
                        aria-describedby="cref-error" 
                        placeholder="000000-G/UF" 
                        maxlength="12" 
                        required
                    >
                    <span class="error-message" id="cref-error" role="alert" aria-live="polite"></span>
                </section>
            </fieldset>
            <button type="submit" class="botao-principal" aria-describedby="form-help">Cadastrar</button>
        </form>
    </section>

    <!-- Lado direito -->
    <aside class="caixa-direita">
      <h2>Faça parte <br> da gente!</h2>
      <br> <br>
      <p>Já tem uma conta?</p>
      <a href="/login" class="botao-secundario">Entrar</a>
      <p>ou</p>
      <a href="/cadastroaluno" class="botao-secundario">Sou Aluno</a>
    </aside>

  </main>

  <!-- Pop-up removido -->

  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="\js\verificacao\front_cad-prof.js"></script>
  <!-- Inline popup script removido para permitir envio normal ao servidor -->
</body>
</html>