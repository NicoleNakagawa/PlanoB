<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login PlanoB</title>
    <link rel="stylesheet" href="\css\cadlog\log_aluno.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="\js\verificacao\front_log.js" defer></script>
    <style>
        /* Estilos adicionais apenas para o seletor de tipo */
        .tipo-usuario-group {
            margin-bottom: 20px;
            text-align: center;
        }
        .tipo-usuario-group label {
            display: block;
            margin-bottom: 10px;
            color: #fff;
            font-weight: 600;
        }
        .radio-opcoes {
            display: flex;
            justify-content: center;
            gap: 20px;
        }
        .radio-opcoes label {
            display: flex;
            align-items: center;
            cursor: pointer;
            color: #fff;
            font-weight: normal;
        }
        .radio-opcoes input[type="radio"] {
            margin-right: 8px;
            width: auto;
            accent-color: #fff;
        }
        .mensagem-erro-geral {
            background-color: rgba(255, 100, 100, 0.2);
            color: #fff;
            padding: 12px;
            border-radius: 8px;
            margin-bottom: 15px;
            text-align: center;
            border: 1px solid rgba(255, 100, 100, 0.4);
        }
    </style>
</head>
<body>
    <header>
    </header>

    <main class="container">
        <!-- Lado esquerdo -->
        <aside class="caixa-esquerda">
            <h2>Olá,<br>bem-vindo!</h2>
            <p>Não tem uma conta?</p>
            <a href="/cadastroaluno" class="botao-secundario">Cadastrar</a>
        </aside>

        <!-- Lado direito -->
        <section class="caixa-direita">
            <a href="/" class="voltar"><i class="fas fa-arrow-left"></i></a>
            
            <form action="/login" method="POST" id="cadastroForm" role="form" aria-label="Formulário de Login do Usuário">
                <fieldset class="form-group">
                    <h2>LOGIN</h2>
                    
                    <!-- Mensagem de erro geral -->
                    <% if (typeof mensagemErro !== 'undefined' && mensagemErro) { %>
                        <div class="mensagem-erro-geral">
                            <%= mensagemErro %>
                        </div>
                    <% } %>
                    
                    <!-- NOVO: Seletor de tipo de usuário -->
                    <div class="tipo-usuario-group">
                        <label>Você é:</label>
                        <div class="radio-opcoes">
                            <label>
                                <input type="radio" name="tipoUsuario" value="aluno" required checked>
                                <span>Aluno</span>
                            </label>
                            <label>
                                <input type="radio" name="tipoUsuario" value="professor" required>
                                <span>Professor</span>
                            </label>
                        </div>
                    </div>
                    
                    <section class="input-goup">
                        <label for="email">Email:</label>
                        <input 
                            type="email" 
                            id="email" 
                            name="email" 
                            value="<%= typeof values !== 'undefined' ? values.email || '' : '' %>"
                            aria-describedby="email-error" 
                            required
                        >
                        <% if (typeof errors !== 'undefined' && errors.email) { %>
                            <span class="error-message" id="email-error" role="alert" aria-live="polite">
                                <%= errors.email %>
                            </span>
                        <% } else { %>
                            <span class="error-message" id="email-error" role="alert" aria-live="polite"></span>
                        <% } %>
                    </section>
                </fieldset>
                
                <fieldset class="form-group">
                    <section class="input-goup">
                        <label for="senha">Senha:</label>
                        <input 
                            type="password" 
                            id="senha" 
                            name="password" 
                            aria-describedby="senha-error" 
                            required
                        >
                        <button type="button" id="toggleSenha" tabindex="-1" style="margin-left:-36px; background:none; border:none; cursor:pointer;">
                            <i class="fas fa-eye"></i>
                        </button>
                        <% if (typeof errors !== 'undefined' && errors.password) { %>
                            <span class="error-message" id="senha-error" role="alert" aria-live="polite">
                                <%= errors.password %>
                            </span>
                        <% } else { %>
                            <span class="error-message" id="senha-error" role="alert" aria-live="polite"></span>
                        <% } %>
                    </section>
                </fieldset>
                
                <button type="submit" class="botao-principal" aria-describedby="form-help">Entrar</button>
            </form>
        </section>
    </main>
</body>
</html>